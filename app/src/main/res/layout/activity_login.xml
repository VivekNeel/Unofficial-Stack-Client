<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_vertical_margin">

    <RelativeLayout
        android:id="@+id/login_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="visible">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Login to enjoy more features of stack client app!You will be able to ask questions , upvote , downvote , favourite
             the answers/questions"
            android:id="@+id/login_notice"
            android:textSize="@dimen/login_notice_textsize"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login_notice"
            android:id="@+id/button_container">


        <Button
            android:id="@+id/login_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="Login"
            android:layout_below="@+id/login_notice"
            android:textColor="#fff"
            android:visibility="visible" />

        <Button
            android:id="@+id/guest_user_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:layout_below="@+id/login_button"
            android:layout_centerInParent="true"
            android:text="Continue as guest"
            android:textColor="#fff" />

        </LinearLayout>
    </RelativeLayout>


</LinearLayout>

